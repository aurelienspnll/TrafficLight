MODULE pedestrianLight
    VAR
        state : { green, red };

MODULE carLight
    VAR
        state : {red, yellow, green};
        tick : 0..10;

    ASSIGN
        init(state) := red;
        next(state) := case
                            state = red & tick = 0 : green;
                            state = green & tick = 0 : yellow;
                            state = yellow & tick = 0 : red;
                            TRUE : state;
                        esac;

        init(tick) := 0;
        next(tick) := case
                            tick = 0 & state = red : 10;
                            tick = 0 & state = green : 2;
                            tick = 0 & state = yellow : 5;
                            TRUE : tick - 1;
                        esac;

